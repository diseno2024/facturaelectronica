<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo superior -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4A8C74"/>
            <!-- Definición del radio del borde inferior derecho como el 10% del ancho de la pantalla -->
            <corners android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="0dp"/>
        </shape>
    </item>
    <!-- Fondo inferior -->
    <item android:top="@dimen/top_margin">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <!-- Definición del radio de los bordes superiores izquierdo y derecho como el 5% del ancho de la pantalla -->
            <corners
                android:topLeftRadius="@dimen/top_left_radius"
                android:topRightRadius="@dimen/top_right_radius"/>
        </shape>
    </item>
</layer-list>

