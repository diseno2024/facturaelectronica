<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1400dp"
        android:background="@drawable/intro_design7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>

    <ImageView
        android:id="@+id/imgAuth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.9"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:src="@drawable/authimg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


    <TextView
        android:id="@+id/textViewPrueba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:elevation="2dp"
        android:text="Prueba"
        android:textAlignment="center"
        android:textColor="#4A8C74"
        android:textSize="60sp"

        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/imgAuth"
        app:layout_constraintEnd_toEndOf="@id/imgAuth"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="@id/imgAuth"
        app:layout_constraintTop_toTopOf="@id/imgAuth"
        app:layout_constraintVertical_bias="0.289" />

    <EditText
        android:id="@+id/userp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:backgroundTint="#4A8C74"
        android:elevation="2dp"
        android:ellipsize="end"
        android:hint="Usuario"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColorHint="#95BFB0"
        app:layout_constraintEnd_toEndOf="@+id/imgAuth"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="@id/imgAuth"
        app:layout_constraintTop_toTopOf="@id/textViewPrueba"
        app:layout_constraintWidth_percent="0.6" />

    <EditText
        android:id="@+id/contrap"
        android:layout_width="0dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="115dp"
        android:backgroundTint="#4A8C74"
        android:elevation="2dp"
        android:textSize="40dp"
        android:hint="Contrase침a"
        android:textAlignment="center"
        android:textColorHint="#95BFB0"
        app:layout_constraintEnd_toEndOf="@+id/imgAuth"
        app:layout_constraintStart_toStartOf="@id/imgAuth"
        app:layout_constraintTop_toTopOf="@id/userp"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHorizontal_bias="0.28"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/textViewProduc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="190dp"
        android:elevation="2dp"
        android:text="Producci칩n"
        android:textAlignment="center"
        android:textColor="#4A8C74"
        android:textSize="60sp"
        android:textStyle="normal"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintEnd_toEndOf="@id/imgAuth"
        app:layout_constraintStart_toStartOf="@id/imgAuth"
        app:layout_constraintTop_toBottomOf="@+id/contrap" />

    <EditText
        android:id="@+id/userpr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="115dp"
        android:inputType="text"
        android:elevation="2dp"
        android:hint="Usuario"
        android:textAlignment="center"
        android:textColorHint="#95BFB0"
        android:backgroundTint="#4A8C74"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/imgAuth"
        app:layout_constraintStart_toStartOf="@id/imgAuth"
        app:layout_constraintTop_toTopOf="@id/textViewProduc"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHorizontal_bias="0.28"
        android:ellipsize="end"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/contrapr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="115dp"
        android:backgroundTint="#4A8C74"
        android:elevation="2dp"
        android:textSize="40sp"
        android:hint="Contrase침a"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="#95BFB0"
        app:layout_constraintEnd_toEndOf="@+id/imgAuth"
        app:layout_constraintStart_toStartOf="@id/imgAuth"
        app:layout_constraintTop_toTopOf="@id/userpr"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHorizontal_bias="0.28"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurar \nCredenciales de \nFacturaci칩n Hacienda"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />



</androidx.constraintlayout.widget.ConstraintLayout>