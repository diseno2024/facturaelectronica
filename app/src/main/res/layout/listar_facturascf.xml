<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_factura"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp"
    app:cardUseCompatPadding="false"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="25dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <!-- Ícono del documento -->
            <ImageView
                android:id="@+id/iconoCard"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                app:srcCompat="@drawable/ic_factura"
                android:layout_alignParentLeft="true"
                app:tint="@color/verde_menta_1" />

            <!-- Contenedor de textos -->
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/iconoCard"
                android:layout_toStartOf="@+id/linearLayoutBotonesGmailWhatsApp"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/iconoCard">

                <TextView
                    android:id="@+id/textViewNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textViewTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/textViewDui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Contenedor para los botones apilados -->
            <LinearLayout
                android:id="@+id/linearLayoutBotonesGmailWhatsApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">

                <!-- Botón para enviar por Gmail -->
                <ImageButton
                    android:id="@+id/btnEnviarPorGmail"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/gmail"
                    android:contentDescription="Enviar Documentos por Gmail"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:padding="0dp" />

                <!-- Espaciado entre los botones -->
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="15dp" />

                <!-- Botón para enviar por WhatsApp -->
                <ImageButton
                    android:id="@+id/btnEnviarPorWhatsApp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/whatsapp"
                    android:contentDescription="Enviar Documentos por WhatsApp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:padding="0dp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>