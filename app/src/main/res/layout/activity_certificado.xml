<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/intro_design8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>


    <ImageView
        android:id="@+id/imgAuth"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:src="@drawable/certifimg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_select_clave" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Ingresa tu \nCertificado"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selected_cer"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/picker_clave"
        android:padding="11dp"
        android:text="Agregue su Certificado"
        android:textAlignment="center"
        android:textColor="#2E594A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintWidth_percent="0.7"
        android:ellipsize="end"
        android:maxLines="1"/>


    <Button
        android:id="@+id/btn_select_cer"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="99dp"
        android:layout_height="39dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="129dp"
        android:background="@drawable/btn_clave"
        android:padding="0dp"
        android:text="Examinar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_cer" />

    <TextView
        android:id="@+id/selected_clave"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/picker_cer"
        android:padding="11dp"
        android:text="Agregue su Clave Privada"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_select_cer"
        app:layout_constraintWidth_percent="0.7"
        android:ellipsize="end"
        android:maxLines="1"/>

    <Button
        android:id="@+id/btn_select_clave"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/button_cer"
        android:text="Examinar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_clave" />


</androidx.constraintlayout.widget.ConstraintLayout>