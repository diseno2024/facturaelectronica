<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CertificadoM">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4a8c74"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/atras"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:background="@drawable/click_effect"
            android:clickable="true"
            android:contentDescription="bottom"
            android:focusable="true"
            android:layout_gravity="start"
            app:srcCompat="@drawable/icons8_back_arrow_48"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/title_factura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certificado"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Certificado: "
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/selected_cer"
        app:layout_constraintStart_toStartOf="@id/selected_cer" />

    <TextView
        android:id="@+id/selected_cer"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/picker_cer"
        android:padding="11dp"
        android:text="Agregue su certificado"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintWidth_percent="0.7"
        android:ellipsize="end"
        android:maxLines="1"/>


    <ImageButton
        android:id="@+id/btnBorrarCer"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginEnd="-25dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/click_effect"
        android:clickable="true"
        android:contentDescription="bottom"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/selected_cer"
        app:layout_constraintEnd_toEndOf="@+id/selected_cer"
        app:srcCompat="@drawable/icons8_delete_32_1_"
        app:tint="#00b861" />

    <Button
        android:id="@+id/btn_select_cer"
        android:layout_width="99dp"
        android:layout_height="39dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="129dp"
        android:background="@drawable/button_cer"
        android:padding="0dp"
        android:text="Examinar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_cer" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Clave Privada: "
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/selected_clave"
        app:layout_constraintStart_toStartOf="@id/selected_clave" />
    <TextView
        android:id="@+id/selected_clave"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/picker_cer"
        android:padding="11dp"
        android:text="Agregue su clave privada"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_select_cer"
        app:layout_constraintWidth_percent="0.7"
        android:ellipsize="end"
        android:maxLines="1"/>
    <ImageButton
        android:id="@+id/btnBorrarClave"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginEnd="-25dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/click_effect"
        android:clickable="true"
        android:contentDescription="bottom"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/selected_clave"
        app:layout_constraintEnd_toEndOf="@+id/selected_clave"
        app:srcCompat="@drawable/icons8_delete_32_1_"
        app:tint="#00b861" />

    <Button
        android:id="@+id/btn_select_clave"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/button_cer"
        android:text="Examinar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_clave" />


</androidx.constraintlayout.widget.ConstraintLayout>